{
    "name": "s2ts",
    "version": "0.6.1",
    "description": "A tool to automatically compile counter-strike TS files (.vts files)",
    "main": "dist/main.js",
    "exports": {
        "./types/point_script": "./types/point_script.d.ts"
    },
    "bin": {
        "s2ts": "dist/cli.js"
    },
    "files": [
        "types",
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "types": "types/point_script.d.ts",
    "license": "MIT",
    "keywords": [
        "counter-strike",
        "source",
        "source2",
        "typescript",
        "vts",
        "compiler"
    ],
    "scripts": {
        "build": "npm run build:compiler && npm run build:post",
        "build:compiler": "tsc --project tsconfig.build-compiler.json",
        "build:post": "ts-node ./src/postBuild.ts",
        "start": "ts-node --transpile-only --project tsconfig.json src/cli.ts start",
        "publish-npm": "npm run build && npm publish"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@biomejs/biome": "2.2.4",
        "@types/node": "^20.14.8",
        "ts-node": "^10.9.2"
    },
    "dependencies": {
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "chokidar": "^3.6.0",
        "rollup": "^4.18.0",
        "tslib": "^2.7.0",
        "typescript": "^5.5.2"
    }
}
